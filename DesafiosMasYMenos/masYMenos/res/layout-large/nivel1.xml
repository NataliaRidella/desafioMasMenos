<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nivel1_rl"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/nivel1_fondo"
    android:fadingEdge="horizontal"
    android:paddingLeft="-4dp"
    android:paddingRight="-5dp"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/rl_nivel1_juego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/nivel1_ll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/consigna_y_fruta"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="85"
                android:background="#b2ffffe0" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="20" >

                    <TextView
                        android:id="@+id/consigna"
                        style="@style/ConsignaFont"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:gravity="center_vertical"
                        android:text="Donde hay mÃ¡s" />

                    <ImageView
                        android:id="@+id/fruta"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/consigna"
                        android:layout_weight="50"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/signo"
                        style="@style/ConsignaFont"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignBaseline="@id/consigna"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_toRightOf="@id/fruta"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:text=" ?" />

                    <ImageView
                        android:id="@+id/masomenos"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="7dp"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="90" />

            <LinearLayout
                android:id="@+id/arboles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="25"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="33"
                    android:gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/arbol1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_weight="33"
                        android:adjustViewBounds="true"
                        android:src="@drawable/nivel1_arbol"
                        android:visibility="visible" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="33"
                    android:gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/arbol2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_weight="33"
                        android:adjustViewBounds="true"
                        android:src="@drawable/nivel1_arbol"
                        android:visibility="visible" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="33"
                    android:gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/arbol3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_weight="33"
                        android:adjustViewBounds="true"
                        android:src="@drawable/nivel1_arbol"
                        android:visibility="visible" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_weight="33"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/nivel1_pasto" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_nivel1_festejo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="75" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="90" />

                <ImageView
                    android:id="@+id/nivel1_correcto"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="40"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/nivel1_correcto" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="90" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="25"
                android:gravity="bottom|center_horizontal" >

                <ImageView
                    android:id="@+id/nivel1_nena_festejo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>